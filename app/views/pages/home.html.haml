.span-18
	#time.span-4
		= Time.zone.now.strftime("%I:%M")
	#date.span-5
		= Time.zone.now.strftime("%b %d")
	.span-9
		- if current_user
			%h3
				Your current status is:
				= current_user.status
			= form_for current_user do |f|
				.span-2
					= f.label      :status, 'Change to:'
				.span-7.raise.last
					= f.select     :status, User::STATUSES
				.span-2
					= f.label      :comment, 'Comment:'
				.span-7.raise.last
					= f.text_field :comment
					(Optional)
				.span-8.last
				= f.submit     'Submit'
			= render 'layouts/activity', :user => current_user
	.spacer.span-18.last
	.spacer.span-18.last
